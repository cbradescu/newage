{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

{% block stats %}
{% endblock %}

{% oro_title_set({params : {"%entity.name%": entity.name|default('N/A') }}) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
        'path' : path('cb_newage_panel_update', { id: entity.id }),
        'entity_label': 'cb.newage.panel.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
        'dataUrl': path('cb_newage_panel_api_delete_panel', {'id': entity.id}),
        'dataRedirect': path('cb_newage_panel_index'),
        'aCss': 'no-hash remove-button',
        'id': 'btn-remove-user',
        'dataId': entity.id,
        'entity_label': 'cb.newage.panel.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('cb_newage_panel_view_create') %}
    {{ UI.clientButton({
        'dataUrl': path('cb_newage_panel_view_add', {id: entity.id}),
        'aCss': 'no-hash',
        'iCss': 'icon-plus-sign',
        'dataId': entity.id,
        'title' : 'cb.newage.panel_view.add.title'|trans,
        'label' : 'cb.newage.panel_view.add.label'|trans,
        'widget' : {
            'type' : 'dialog',
            'multiple' : false,
            'options' : {
            'stateEnabled': false,
            'dialogOptions' : {
                'title' : 'cb.newage.panel_view.add.label'|trans,
                'modal' : true,
                'allowMaximize': false,
                'allowMinimize': false,
                'resizable': false,
                'width': 600
                }
            }
        }
    })
    }}
    {% endif %}

{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('cb_newage_panel_index'),
    'indexLabel': 'cb.newage.panel.entity_plural_label'|trans,
    'entityTitle': entity.name
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {%- set panelInformation -%}
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('cb.newage.panel.code.label'|trans, entity.name) }}
            {{ UI.renderProperty('cb.newage.panel.lighting.label'|trans, entity.isLighting ? 'Yes'|trans : 'No'|trans) }}
            {{ UI.renderProperty('cb.newage.panel.dimensions.label'|trans, entity.dimensions) }}
            {{ UI.renderProperty('cb.newage.panel.gps.label'|trans, entity.gps) }}
            {{ UI.renderHtmlProperty('cb.newage.panel.neighborhoods.label'|trans, entity.neighborhoods|escape|nl2br) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(entity) }}
        </div>
    </div>
    {%- endset -%}


    {% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
    {% set gridName = 'panel-panel_views-grid' %}
    {% set params = {panel_id: entity.id} %}
    {%- set gridPanelViews -%}
    {% if gridName is defined %}
        {% if gridScope is defined %}
            {% set gridName = oro_datagrid_build_fullname(gridName, gridScope) %}
        {% endif %}
        {% if params is defined %}
            {{ dataGrid.renderGrid(gridName, params) }}
        {% else %}
            {{ dataGrid.renderGrid(gridName) }}
        {% endif %}
    {% endif %}
    {%- endset -%}


    {% set dataBlocks = [
    {
    'title': 'cb.newage.panel.block.general'|trans,
    'class': 'active',
    'subblocks': [
    {'data' : [panelInformation]}
    ]
    },
    {
    'title': 'cb.newage.panel.block.panel_views'|trans,
    'class': 'active',
    'subblocks': [
    {'data': [gridPanelViews]}
    ]
    }
    ] %}


    {% set id = 'panelView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}

    {{ parent() }}
{% endblock content_data %}
