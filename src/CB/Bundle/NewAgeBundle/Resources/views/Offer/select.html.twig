{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

{% block stats %}
    {% include 'CBNewAgeBundle:Panel:headerStats.html.twig' with {'entity': entity} %}
{% endblock stats %}

{% oro_title_set({params : {"%entity.name%": entity.name|default('N/A') }}) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.cancelButton(path('cb_newage_offer_view', { id: entity.id })) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('cb_newage_offer_index'),
    'indexLabel': 'cb.newage.offer.entity_plural_label'|trans,
    'entityTitle': entity.name
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

    {% set gridName = 'available-panel_view-grid' %}

    {% set params = {
        forbidden: forbidden,
        offer: entity.id
    } %}

    {%- set forbiddenInformation -%}
        {% if gridName is defined %}
            {% if gridScope is defined %}
                {% set gridName = oro_datagrid_build_fullname(gridName, gridScope) %}
            {% endif %}
            {% if params is defined %}
                {{ dataGrid.renderGrid(gridName, params) }}
            {% else %}
                {{ dataGrid.renderGrid(gridName) }}
            {% endif %}
        {% endif %}
    {%- endset -%}

    {% set dataBlocks = [
    {
        'title': 'cb.newage.offer.block.available'|trans,
        'class': 'active',
        'subblocks': [
            {'data' : [forbiddenInformation]}
        ]
    }
    ] %}



    {% set id = 'offerView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}

    {{ parent() }}
{% endblock content_data %}
