{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}
{% oro_title_set({params : {"%entity.name%": form.vars.value.title|default('N/A')} }) %}

{% set formAction = form.vars.value.id ? path('cb_newage_campaign_update', { 'id': form.vars.value.id }) : path('cb_newage_campaign_create')  %}

{% block head_script %}
    {{ parent() }}
    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
        'dataUrl': path('cb_newage_campaign_api_delete_campaign', {'id': form.vars.value.id}),
        'dataRedirect': path('cb_newage_campaign_index'),
        'aCss': 'no-hash remove-button',
        'dataId': form.vars.value.id,
        'id': 'btn-remove-campaign',
        'entity_label': 'cb.newage.campaign.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('cb_newage_campaign_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('cb_newage_campaign_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('cb_newage_campaign_index'),
        'indexLabel': 'cb.newage.campaign.entity_plural_label'|trans,
        'entityTitle': form.vars.value.title|default('N/A')
        }
        %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'cb.newage.campaign.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'campaign-profile' %}

    {% set dataBlocks = [{
    'title': 'General'|trans,
    'class': 'active',
    'subblocks': [
    {
    'title': null,
    'data': [
    form_row(form.title),
    form_row(form.description),
    form_row(form.start),
    form_row(form.end),
    form_row(form.confirmed)
    ]
    }
    ]
    }] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}
    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
        'title': 'Additional'|trans,
        'subblocks': [{
        'title': '',
        'useSpan': false,
        'data' : additionalData
        }]
        }] ) %}
    {% endif %}

    {% if form.panelViews is defined%}
        {% set dataBlocks = dataBlocks|merge([{
        'title' : 'cb.newage.campaign.block.panel_views'|trans,
        'subblocks': [{
        'title' : null,
        'useSpan': false,
        'data' : [
        form_widget(form.panelViews)]
        }]
        }] ) %}
    {% endif %}

    {% set data = {
    'formErrors': form_errors(form)? form_errors(form) : null,
    'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
