{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

{% block stats %}
{% endblock %}

{% oro_title_set({params : {"%entity.name%": entity.title|default('N/A') }}) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
        'path' : path('cb_newage_campaign_update', { id: entity.id }),
        'entity_label': 'cb.newage.campaign.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
        'dataUrl': path('cb_newage_campaign_api_delete_campaign', {'id': entity.id}),
        'dataRedirect': path('cb_newage_campaign_index'),
        'aCss': 'no-hash remove-button',
        'id': 'btn-remove-user',
        'dataId': entity.id,
        'entity_label': 'cb.newage.campaign.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('cb_newage_campaign_index'),
    'indexLabel': 'cb.newage.campaign.entity_plural_label'|trans,
    'entityTitle': entity.title
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {%- set campaignInformation -%}
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('cb.newage.campaign.title.label'|trans, entity.title) }}
            {{ UI.renderHtmlProperty('cb.newage.campaign.description.label'|trans, entity.description|escape|nl2br) }}
        </div>

        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(entity) }}
        </div>
    </div>
    {%- endset -%}

    {% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
    {% set gridName = 'campaign-scheduler_event-grid' %}
    {% set params = {campaign_id: entity.id} %}

    {%- set gridSchedulerEvents -%}
        {% if gridName is defined %}
            {% if gridScope is defined %}
                {% set gridName = oro_datagrid_build_fullname(gridName, gridScope) %}
            {% endif %}
            {% if params is defined %}
                {{ dataGrid.renderGrid(gridName, params) }}
            {% else %}
                {{ dataGrid.renderGrid(gridName) }}
            {% endif %}
        {% endif %}
    {%- endset -%}

    {% set dataBlocks = [
        {
            'title': 'cb.newage.campaign.block.general'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [campaignInformation]}
            ]
        },
        {
            'title': 'cb.newage.panel.block.panel_views'|trans,
            'class': 'active',
            'subblocks': [
                {'data': [gridSchedulerEvents]}
            ]
        }
    ] %}


    {% set id = 'campaignView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}

    {{ parent() }}
{% endblock content_data %}
