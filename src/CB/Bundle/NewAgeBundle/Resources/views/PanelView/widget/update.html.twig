{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="widget-content call-form">
    {% if saved is defined and saved %}
        <script type="text/javascript">
            require(['underscore', 'orotranslation/js/translator', 'oroui/js/widget-manager',
                        'oroui/js/messenger', 'oroui/js/mediator'],
                    function(_, __, widgetManager, messenger, mediator) {
                        widgetManager.getWidgetInstance({{ app.request.get('_wid')|json_encode|raw }}, function(widget) {
                            messenger.notificationFlashMessage('success', __('cb.newage.panel_view.saved.successfully'));
                            mediator.trigger('widget_success:' + widget.getAlias());
                            mediator.trigger('widget_success:' + widget.getWid());
                            widget.remove();
                            mediator.trigger("datagrid:doRefresh:panel-panel_views-grid");
                        });
                    });
        </script>
    {% else %}

        {% if not form.vars.valid and form.vars.errors|length %}
            <div class="alert alert-error">
                <div class="message">
                    {{ form_errors(form) }}
                </div>
            </div>
        {% endif %}
        <div class="form-container">
            <form id="{{ form.vars.name }}" action="{{ path('cb_newage_panel_view_add', {id:form.panel.vars.value}) }}" method="post">
                <fieldset class="form form-horizontal">
                    <div class="span6">
                        <div style="display:none">
                            {{ form_row(form.panel) }}
                        </div>

                        {{ UI.renderProperty('cb.newage.panel.entity_label'|trans, entity.panel) }}
                        {{ form_row(form.name) }}
                    </div>

                    <div class="span6">
                        {{ form_rest(form) }}
                    </div>
                    <div class="widget-actions form-actions">
                        <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                        <button class="btn btn-primary" type="submit">{{ 'Save'|trans }}</button>
                    </div>
                </fieldset>
            </form>

        </div>
    {% endif %}
</div>